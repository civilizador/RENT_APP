
<div style="color: silver; background:none;" class='container'>
  <h1>All Claims</h1>
  <div class="row">

<%@claims.each_with_index do |c, index|%>

  <%@rents.each do |r|%>
  <div class="col-lg-4 col-md-6 col-sm-12">

    <%if r.id==c.rent_id%>
      <p>User: <%=User.find(r.user_id).email%><br>
        Description: <%=c.description%><br>
        Status: <%=c.status%><br>
        Price: <%=c.price%><br>
        Type: <%=c.type_of_claim%><br></p>
        <div><a class='btn btn-lg btn-warning' href="/claims/<%=c.id %>/edit"> Edit Claims</a></div>
        <%end%>
      <%end%>
    <%end%>
  </div>
</div>
</div>


